@model IEnumerable<SampleTemplate.Models.Game>

@{
	ViewBag.Title = "Welcome!";
}
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<h2>Account Information</h2>
<section>
	<p>Membership expires on @Session["renew"]</p>
	
	<div class="row">


            <p>@Html.ActionLink("Display Your Game Library", "DisplayLibraryGames", "MemberPage", new { email = Session["email"] }, null)</p>

            @if (Model != null)
            {

                foreach (var game in Model)

                {
                    <div class="col-sm-3">
                        @*<img src="~/Content/Images/@game.GameImage" alt="@game.Title" />*@
                        <p class="librarygame"> @game.Title</p>
                    </div>
                }
            }

            @using (Ajax.BeginForm("SearchMember", "MemberPage",
            new AjaxOptions
            {
                HttpMethod = "Post",
                UpdateTargetId = "friends",
                InsertionMode = InsertionMode.Replace

            }))
            {
                <input type="text" name="Search" id="searchusers" placeholder="Search Users" />
                @*<input type="submit" value="Search" />*@
            }

            <span id="friends"></span>


		
			</div>

</section>

