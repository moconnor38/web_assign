@model IEnumerable<SampleTemplate.Models.Game>

@{
	ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<h2>Account Information</h2>
<section>
	<span>Membership expires on @Session["renew"]</span>
	<div class="row">
		@Html.ActionLink("Display Library", "DisplayLibraryGames", "MemberPage", new { email = Session["email"] }, null)

		@if (Model != null)
		{

			foreach (var game in Model)

			{
				<div class="col-sm-3">
					@*<img src="~/Content/Images/@game.GameImage" alt="@game.Title" />*@
					<p> @game.Title</p>

				</div>}

		}

		@using (Ajax.BeginForm("SearchMember", "MemberPage",
			new AjaxOptions
			{
				HttpMethod = "Post",
				UpdateTargetId = "friends",
				InsertionMode = InsertionMode.Replace

			}))
		{
			<input type="text" name="Search" placeholder="Search Users" />
						<input type="submit" value="Search" />
		}

		<span id="friends">

		</span>
			</div>

</section>

