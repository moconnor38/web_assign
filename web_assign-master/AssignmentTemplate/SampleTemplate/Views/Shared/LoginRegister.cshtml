@if (Session["username"] != null)
{
    <span>@Session["username"], you are logged in</span>
	<span>Membership expires on @Session["renew"]</span>
    @Html.ActionLink("Logout", "LogOut", "User", null, new { @class = "register" })
}
else
{
    @Html.ActionLink("Register", "Index", "User", null, new { @class = "register" })
    @Html.ActionLink("Login /", "Login", "User", null, new { @class = "register" })
}